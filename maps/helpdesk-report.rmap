--- !helpdesk.ccboe.com/report
primarytable: helpdesk
primarykey: ticket
cols:
 hidden:
  - requested
  - tech
fields:
 - schoolname:
# Name is the table.fieldname where the value we want to display is stored
    name: school.name
# Label is what we want to call the value in e.g. the combo box
    label: School
# As is currently not displayed anywhere, but it might break code to omit it
    as: School Name
# Where will this field be used? Show=results table, sort=sort selector,select=fields selector
    column:
     - show
     - sort
     - select
    join:
# 'field' will be the field to sort against!
     sort: school.name
     type: inner
     on: school
     from: helpdesk.school
     to: school.scid
     compare: '='
 # If we're selecting based on this field, to what field should we pass the selection criteria?
    where: school.name
    sort: school.name
 - ticket:
    name: helpdesk.ticket
    label: Ticket
    as: Ticket
    column:
     - show
     - sort
     - select
    where: helpdesk.ticket
    sort: helpdesk.ticket
 - author:
    name: helpdesk.author
    label: Author
    as: Author
    column:
     - sort
     - select
    where: helpdesk.author
    sort: helpdesk.author
 - contact:
    name: helpdesk.contact
    label: Contact
    as: Contact
    column:
     - sort
     - select
    where: helpdesk.contact
    sort: helpdesk.contact
 - location:
    name: helpdesk.location
    label: Location
    as: Location
    column:
     - show
     - sort
     - select
    where: helpdesk.location
    sort: helpdesk.location
 - problem:
    name: helpdesk.problem
    label: Problem
    as: Problem
    column:
     - show
     - sort
     - select
    where: helpdesk.problem
    sort: helpdesk.problem
 - barcode:
    name: helpdesk.barcode
    label: Barcode
    as: Barcode
    column:
     - show
     - sort
     - select
    where: helpdesk.barcode
    sort: helpdesk.barcode
 - tech:
    name: helpdesk.tech
    label: Processed By
    as: Processed By
    column:
     - sort
     - select
    where: helpdesk.tech
    sort: helpdesk.tech
 - requested:
    name: helpdesk.requested
