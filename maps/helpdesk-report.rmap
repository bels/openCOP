    sort: helpdesk.requested
 - schoolnumber:
    name: helpdesk.school
    label: School Number
    as: School Number
    column:
     - sort
     - select
     - suppress
    where: helpdesk.school
    sort: helpdesk.school
 - updated:
    name: helpdesk.updated
    label: Updated
    as: Updated
    column:
     - show
     - sort
     - select
    where: helpdesk.updated
    sort: helpdesk.updated
 - section:
    name: section.name
    label: Section
    as: Section
    column:
     - sort
     - select
    join:
     type: inner
     on: section
     from: helpdesk.section
     to: section.sid
     compare: '='
    where: section.name
    sort: section.sid
 - priority:
    name: helpdesk.priority
    label: Priority
    as: Priority
    column:
     - sort
     - select
    join:
     type: inner
     on: priority
     from: helpdesk.priority
     to: priority.prid
     compare: '='
    where: priority.description
    sort: priority.severity
 - ticket_status:
    name: ticket_status.name
    label: Status
    as: Status
    column:
     - sort
     - select
    join:
     type: inner
     on: ticket_status
     from: helpdesk.status
     to: ticket_status.tsid
     compare: '='
    where: ticket_status.name
    sort: ticket_status.name
 - troubleshot:
